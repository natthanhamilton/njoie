<style>
#section-{{ section.id }} .videoWrapper {
  position: relative;
  padding-bottom: 44%;
  height: 0;
}
#section-{{ section.id }} .videoWrapper iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
</style>

<div id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="video-section">
  {%- if section.settings.video_asset != blank -%}
    <div class="videoWrapper">
      <iframe src="{{ section.settings.video_asset }}" width="640" height="480" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
    </div>
  {%- else -%}
    <div class="placeholder-noblocks">
      {{ 'homepage.onboarding.no_content' | t }}
    </div>
  {%- endif -%}
</div>


{% schema %}
{
  "name": "Video",
  "class": "video-section",
  "settings": [
				{
					"type": "text",
					"id": "video_asset",
					"label": "Video link"
				}
  ],
  "presets": [
    {
      "name": "Video",
      "category": "Video"
    }
  ]
}
{% endschema %}
